<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Mifos.DesignSystem.Components.CountryCodePicker" parent="android:Widget">
        <item name="ccp_contentColor">?attr/colorOnBackground</item>
        <item name="ccpDialog_searchEditTextTint">?attr/colorOnBackground</item>
    </style>

    <style name="Mifos.DesignSystem.Components.HorizontalSpacer" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:alpha">@dimen/alpha_least_emphasis</item>
    </style>

    <style name="Mifos.DesignSystem.Components.VerticalSpacer" parent="android:Widget">
        <item name="android:layout_height">match_parent</item>
        <item name="android:width">1dp</item>
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:alpha">@dimen/alpha_least_emphasis</item>
    </style>

    <style name="Mifos.DesignSystem.Components.NoBorderTextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@android:color/transparent</item>
    </style>


    <style name="Mifos.DesignSystem.TextStyle.PrimaryColorBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Mifos.DesignSystem.TextStyle.PrimaryColorBodyLarger" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Mifos.DesignSystem.Components.IconButton" parent="Widget.Material3.Button.IconButton"/>


    <style name="Mifos.DesignSystem.Components.ProfileImage" parent="android:Widget">
        <item name="strokeColor" >?attr/colorPrimaryContainer</item>
        <item name="strokeWidth" >3dp</item>
        <item name="shapeAppearance" >@style/Mifos.DesignSystem.Shape.roundedImage</item>
        <item name="imageChangeButtonSize" >30dp</item>
        <item name="imageChangeButtonSrc" >@drawable/ic_baseline_photo_camera_24</item>
        <item name="imageChangeButtonBottomEndPadding" >0dp</item>
        <item name="imageChangeButtonInnerPadding" >3dp</item>
    </style>
</resources>